{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "lib": ["es5", "es2015.promise", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "outDir": "dist/"
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "include": [
      "src/**/*",
      "typings/index.d.ts"
    ]
}
